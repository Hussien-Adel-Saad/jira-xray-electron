{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "./dist-electron",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": [
    "src/main/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/renderer"
  ]
}