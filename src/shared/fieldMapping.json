{
  "meta": {
    "version": "1.0.0",
    "description": "Field mapping configuration for Jira + Xray integration",
    "apiVersion": "jira-rest-v2"
  },
  "common": {
    "project": {
      "jiraField": "project",
      "type": "object",
      "required": true,
      "format": { "key": "string" }
    },
    "issueType": {
      "jiraField": "issuetype",
      "type": "object",
      "required": true,
      "format": { "name": "string" }
    },
    "summary": {
      "jiraField": "summary",
      "type": "string",
      "required": true
    },
    "description": {
      "jiraField": "description",
      "type": "string",
      "required": false
    },
    "priority": {
      "jiraField": "priority",
      "type": "object",
      "required": false,
      "format": { "name": "string" }
    },
    "assignee": {
      "jiraField": "assignee",
      "type": "object",
      "required": false,
      "format": { "name": "string" }
    },
    "labels": {
      "jiraField": "labels",
      "type": "array",
      "required": false
    },
    "fixVersions": {
      "jiraField": "fixVersions",
      "type": "array",
      "required": false,
      "format": [{ "name": "string" }]
    },
    "environment": {
      "jiraField": "environment",
      "type": "string",
      "required": false
    }
  },
  "issueTypes": {
    "Test": {
      "jiraIssueTypeName": "Test",
      "xray": {
        "manualSteps": {
          "jiraField": "customfield_12404",
          "type": "array",
          "required": false
        },
        "cucumberTestType": {
          "jiraField": "customfield_13737",
          "type": "object",
          "required": false,
          "format": { "value": "string" }
        },
        "preconditions": {
          "jiraField": "customfield_12408",
          "type": "array",
          "required": false
        },
        "testSets": {
          "jiraField": "customfield_12407",
          "type": "array",
          "required": false
        },
        "testPlans": {
          "jiraField": "customfield_12409",
          "type": "array",
          "required": false
        }
      }
    },
    "Test Set": {
      "jiraIssueTypeName": "Test Set",
      "xray": {
        "tests": {
          "jiraField": "customfield_12412",
          "type": "array",
          "required": false
        }
      }
    },
    "Test Execution": {
      "jiraIssueTypeName": "Test Execution",
      "xray": {
        "testRunStatus": {
          "jiraField": "customfield_12410",
          "type": "string",
          "required": false
        },
        "executionStartDate": {
          "jiraField": "customfield_27000",
          "type": "datetime",
          "required": false
        },
        "executionEndDate": {
          "jiraField": "customfield_27001",
          "type": "datetime",
          "required": false
        },
        "revision": {
          "jiraField": "customfield_27002",
          "type": "string",
          "required": false
        }
      }
    }
  }
}
